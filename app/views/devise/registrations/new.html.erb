<h2>Sign up</h2>
<div class = "signup" >
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div  class = "required field">
   <label> Name </label>
    <%= f.text_field :firstname, autofocus: true, placeholder: "Firstname" %>
    <%= f.text_field :lastname, placeholder: "Lastname" %>
</div>

<div class="required field">
    <%= f.label :email %>
    <%= f.email_field :email %>
</div>

 <%#= f.label :user_name %>
 <%#= f.text_field :user_name, onblur: "CheckAvailabilityOfUserName()" %>
<div class="required field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>
     <% if @minimum_password_length %>
    <em>(8  characters minimum)</em>
     <% end %>
</div>
<div class="required field ">
    <label> Confirm Password </label>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
</div>
<% if 1 ==1 %>
<div class= "field">
<label>  Choose a profile image </label>
<%= render  partial: 'image_upload', locals: { f: f } %>
</div>
<% end %>
<div class="actions">
    <%= f.submit "Sign up", id: "commit" %>
</div>
<br />
<% end %>
<%= render "devise/shared/links" %>
</div>
