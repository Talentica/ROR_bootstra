<h2>Sign up</h2>
<div class = "signup" >
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <table class = "login-table">
      <div class = "required field">
        <tr>
          <td class="text-label"><label> Name </label><span> *</span></td>
          <td class="text-input"><%= f.text_field :firstname, autofocus: true, placeholder: "Firstname" %>  
          <%= f.text_field :lastname, placeholder: "Lastname" %></td>
        </tr>
        <tr>
          <td class="text-label"><%= f.label :email %><span> *</span></td>
          <td class="text-input"><%= f.email_field :email %></td>
          <td id="validation"></td>
        </tr>
       <%#= f.label :user_name %>
       <%#= f.text_field :user_name, onblur: "CheckAvailabilityOfUserName()" %>
        <tr>
          <td class="text-label"><%= f.label :password %><span> *</span></td>
          <td class="text-input"><%= f.password_field :password, autocomplete: "off" %></td>
          <td class="text-input">
            <% if @minimum_password_length %>
              <em> (8  characters minimum) </em>
            <% end %>
          </td>
        </tr>
        <tr>
          <td class="text-label"><label> Confirm Password </label><span> *</span></td>
          <td class="text-input"><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
        </tr>
      </div>
      <% if 1 ==1 %>
        <div class= "field">
          <tr>
            <td class="text-label"><label> Choose a profile image </label></td>
            <td class="text-input"><%= render  partial: 'image_upload', locals: { f: f } %></td>
          </tr>
        </div>
      <% end %>
      <div class="actions">
        <tr><td></td>
          <td class="text-input"><%= f.submit "Sign up", id: "commit" %></td>
        </tr>
      </div>
    </table>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
